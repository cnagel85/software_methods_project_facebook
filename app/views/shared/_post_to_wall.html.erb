<%= form_for(@micropost) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.text_area :content, placeholder: "Post on #{@user.name}'s wall..." %>
      <%= f.hidden_field :wall_id, value: @user.wall.id %>
    </div>
      <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>