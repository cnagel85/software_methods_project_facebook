
<div class="header-custom">
  <div class="navbar navbar-fixed-top navbar-inverse">
     <div class="navbar-inner">
       <% if signed_in? %>
        <ul class="nav pull-left">
          <li class="span1"></li>
          <li>
            <%= form_tag search_path, :method => 'get', class: "navbar-search pull-left" do %>
                <p>
                  <%= text_field_tag :search, params[:search], placeholder: "Search People" ,class:"search-query" %>
                  <%= submit_tag "Search", :name => nil, class: "btn btn-primary btn-mini header-search"%>
                </p>
            <% end %>
          </li>
        </ul>
       <ul class="nav pull-right">
             <li><%= link_to "Newsfeed", root_path %></li>
             <li><%= link_to "Profile", user_path(current_user) %></li>
             <li><%= link_to "Preferences", edit_user_path(current_user) %></li>
             <li><%= link_to "Sign out", signout_path, method: "delete" %></li>

       </ul>

          <h4><%= current_user.name%></h4>
        <% end %>

     </div>
  </div>
  <div class="title">
    <h1><%= link_to "Project: The Facebook", root_path %></h1>
    <h2 >By Corey Nagel, Matt Binsfeld, and Jordan Tsiao</h2>
  </div>
  </div>


