<% provide(:title, "Sign in") %>
<div class="row"> </div>

<div class="row">
  <h1>Sign In</h1>
  <div class="span5 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Join us!", signup_path %></p>
  </div>
</div>